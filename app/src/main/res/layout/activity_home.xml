<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/img_map"
        android:layout_width="358dp"
        android:layout_height="213dp"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/img_but1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_map"
        app:layout_constraintEnd_toEndOf="@+id/img_map" />

    <ImageButton
        android:id="@+id/img_but2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintBottom_toTopOf="@+id/img_but1"
        app:layout_constraintEnd_toEndOf="@+id/img_map"
        app:layout_constraintTop_toBottomOf="@+id/img_but4"
        app:layout_constraintVertical_bias="0.451" />

    <ImageButton
        android:id="@+id/img_but3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toStartOf="@+id/img_but2"
        app:layout_constraintTop_toTopOf="@+id/img_map" />

    <ImageButton
        android:id="@+id/img_but4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toTopOf="@+id/img_but3"
        app:layout_constraintStart_toEndOf="@+id/img_but6"
        app:layout_constraintTop_toTopOf="@+id/img_map" />

    <ImageButton
        android:id="@+id/img_but5"
        android:layout_width="20dp"
        android:layout_height="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_map"
        app:layout_constraintEnd_toStartOf="@+id/img_but1"
        app:layout_constraintTop_toBottomOf="@+id/img_but7" />

    <ImageButton
        android:id="@+id/img_but6"
        android:layout_width="47dp"
        android:layout_height="28dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/img_but5"
        app:layout_constraintEnd_toStartOf="@+id/img_but3"
        app:layout_constraintStart_toEndOf="@+id/img_but8" />

    <ImageButton
        android:id="@+id/img_but7"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_map"
        app:layout_constraintStart_toStartOf="@+id/img_map" />

    <ImageButton
        android:id="@+id/img_but8"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toStartOf="@+id/img_but3"
        app:layout_constraintStart_toStartOf="@+id/img_map"
        app:layout_constraintTop_toTopOf="@+id/img_map" />

    <TextView
        android:id="@+id/text_hot"
        android:layout_width="358dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:text="요즘 HOT한 루트"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_map"
        app:layout_constraintVertical_bias="0.048" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="408dp"
        android:layout_height="112dp"
        android:layout_marginTop="55dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_hot">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제주도 여행"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_map"
            app:layout_constraintVertical_bias="0.048"/>

        <TextView
            android:id="@+id/where2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="여행코스"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_map"
            app:layout_constraintVertical_bias="0.048"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="보러가기"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="406dp"
        android:layout_height="115dp"
        android:layout_marginTop="52dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="여수 여행"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_map"
            app:layout_constraintVertical_bias="0.048"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="여행코스"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_map"
            app:layout_constraintVertical_bias="0.048"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보러가기"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_write"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:text="작성하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>